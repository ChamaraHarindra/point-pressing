                (RVAA) est la suivante...') %}
    <div class="card blog-wrap">
        <div class="img-wrap">
            <img src="{{ banner }}" class="card-img-top" alt="...">
        </div>
        <div class="card-body">
            <div class="blog-meta">
                <img src="./static/media/user.png" alt="">
                <span class="mr-3">{{ name }}</span>
                <span class="mr-3">{{ date }}</span>
            </div>
            <h5 class="card-title">{{ title }}</h5>
            <p class="card-text">{{ text }}</p>
            <a href="./blog-post.html" class="btn btn-primary">Read More</a>
        </div>
    </div>
{% endmacro %}